<div class="p-4"></div>
<!-- Espacio-->
<div class="p-4"><h3><%= @asignaturasMaster.count  %> Másteres encontrados con la asignatura que contenga <%= @nombre_asig  %></h3></div>
<div class="row row-cols-1 row-cols-md-3">
  <% @asignaturasMaster.each do |asignaturaMaster| %>
    <%= render 'static_pages/masters_asignaturas', asignaturaMaster: asignaturaMaster %>
  <% end %>
</div>


